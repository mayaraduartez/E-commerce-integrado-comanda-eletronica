<%- include('./cabecalho.ejs') %>

<!-- Perfil do usuário -->
<section class="food_section layout_padding">
  
    <div class="heading_container heading_center">
      <h2>Meu Perfil</h2>
    </div>

    <form class="profile_form">
      <% Usuario.forEach(function(usuario) { %>
        <div class="filters-content">
            <div class="profile_picture">
              <img src="/images/img.png" />
            </div>
            <input type="file" />
          </div>

      <!-- Email -->
      <div class="form_group">
        <label for="email"><%=usuario.email%></label>
        <input type="email" id="email" name="email" value="user@example.com" />
        <button href="/forgot" class="change_password_btn">Alterar Senha</button>
      </div>

      <!-- Nome -->
      <div class="form_group">
        <label for="nome"><%=usuario.nome%></label>
        <input type="text" id="nome" name="nome" value="John" />
      </div>

      <!-- Sobrenome -->
      <div class="form_group">
        <label for="sobrenome">Sobrenome:</label>
        <input type="text" id="sobrenome" name="sobrenome" value="Doe" />
      </div>

      <!-- Data de Nascimento -->
      <div class="form_group">
        <label for="data_nascimento">Data de Nascimento:</label>
        <input type="date" id="data_nascimento" name="data_nascimento" value="1990-01-01" />
      </div>

      <!-- Celular -->
      <div class="form_group">
        <label for="celular">Celular:</label>
        <input type="tel" id="celular" name="celular" value="(123) 456-7890" />
      </div>

      <!-- Botão de atualizar perfil -->
      <div class="form_group">
        <button type="submit" class="update_profile_btn">Atualizar Perfil</button>
      </div>
      <% }) %>
    </form>
</section>

<%- include('./rodape.ejs') %>
